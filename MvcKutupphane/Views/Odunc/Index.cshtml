@using MvcKutupphane.Models.Entity
@model List<TblHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>



<table class="table table-bordered">
    <tr>
        <th>İŞlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>
        

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Id</td>
            <td>@k.TblKitap.Ad</td>
            <td>@k.TblUyeler.Ad&nbsp @k.TblUyeler.Soyad</td>
            <td>@k.TblPersonel.Personel</td>
            <td>@Convert.ToDateTime(k.AlısTarihi).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.IadeTarihi).ToString("dd/MM/yyyy")</td>
            <td><a href="/Odunc/Odunciade/@k.Id" class="btn btn-default" style="background-color:#64d8ca; color:white">Kitabı İade Et</a></td>
     
        </tr>
    }
</table>


