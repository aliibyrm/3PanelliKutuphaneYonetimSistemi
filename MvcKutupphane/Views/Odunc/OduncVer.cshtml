@model MvcKutupphane.Models.Entity.TblHareket
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">

        <label>Üye ID</label>
        @*@Html.TextBoxFor(k => k.Uye, new { @class = "form-control" })*@
        @Html.DropDownListFor(k=>k.TblUyeler.Id,(List<SelectListItem>)
       ViewBag.dgr1,new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @*@Html.TextBoxFor(k => k.Kitap, new { @class = "form-control" })*@
        @Html.DropDownListFor(k=>k.TblKitap.Id,(List<SelectListItem>)
     ViewBag.dgr2,new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel ID</label>
        @*@Html.TextBoxFor(k => k.Personel, new { @class = "form-control" })*@
        @Html.DropDownListFor(k=>k.TblPersonel.Id,(List<SelectListItem>)
ViewBag.dgr3,new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="AlısTarihi" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
    <label>Kitap İade Tarihi</label>
    <input type="text" class="form-control" name="IadeTarihi" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" style="background-color:#a330b5;color:white">Kitabı Ödünç Ver</button>
        <input type="hidden" value="False" name="IslemDurum" />
    </div>



</form>

