@using MvcKutupphane.Models.Entity
@model List<TblYazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<div>
    <table class="table table-striped">
        <tr style="background-color:rgb(252,178,22)">
            
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>          
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Yazarın Kitapları</th>
        </tr>
        @foreach (var y in Model)
        {
        <tr>
            <td>@y.Id</td>
            <td>@y.Ad</td>
            <td>@y.Soyad</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
            <td><a href="/Yazar/YazarGetir/@y.Id" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@y.Id" class="btn btn-default" style="background-color:lightseagreen; color:darkolivegreen">Yazarın Kitapları</a></td>
        </tr>
        }
    </table>
</div>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>
