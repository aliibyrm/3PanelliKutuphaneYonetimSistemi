@using MvcKutupphane.Models.Entity
@model List<TblKitap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;">
        <b>Aranacak Kitap Adını Girin: </b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </div>
}




<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kategorisi</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Id</td>
            <td>@k.Ad</td>
            <td>@k.TblYazar.Ad&nbsp @k.TblYazar.Soyad</td>
            <td>@k.TblKategori.Ad</td>
            <td>@k.BasımYıl</td>
            <td>@k.YayınEvi</td>
            <td>@k.SayfaSayisi</td>
            <td>@k.Durum</td>
            <td><a href="/Kitap/KitapSil/@k.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@k.Id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Kitap/KitapEkle/" class="btn btn-primary">Yeni Kitap Ekle</a>

